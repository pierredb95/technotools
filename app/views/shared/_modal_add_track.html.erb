<div class="modal fade" id="addTrack" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="container">
          <div class="form-wrapper" id="booking-modal-form">
            <%= simple_form_for [@vinyl, @track] do |f| %>
              <%= f.input :name , label: 'Track Title' %>
              <%= f.input :url , label: 'Insert Youtube url' %>
              <div class="modal-footer">
                <%= f.button :submit, "Add Track", class: "btn btn-primary" %>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
