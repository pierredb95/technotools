<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "/", class: "navbar-brand" do %>
    <%= image_tag "https://cdn.shopify.com/s/files/1/1816/1199/products/MBTA_Logo_2.5_Circle_Magnet_WEB_grande.jpg" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-link"><%= link_to 'Home', root_path, class: "link-without-style"%></li>
      <%if  current_user %>
        <li class="nav-link"><%= link_to 'Orders & Bookings', bookings_path, class: "link-without-style" %></li>
        <li class="nav-link"><%= link_to 'Post New Vinyl', new_vinyl_path, class: "link-without-style" %></li>
      <% end %>
      <%if  current_user == nil %>
        <li class="nav-link"><%= link_to "Connexion", new_user_session_path, class: "link-without-style" %></li>
        <li class="nav-link"><%= link_to "Sign-up", new_user_registration_path, class: "link-without-style" %></li>
      <% end %>

      <%if  current_user %>
      <li class="nav-item dropdown">
          <%= image_tag "https://geo-static.traxsource.com/files/artists/10554.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Orders & Bookings", bookings_path, class: "dropdown-item" %>
            <%= link_to "Settings", edit_user_registration_path, class: "dropdown-item" %>
            <%= link_to "Log-out", destroy_user_session_path, method: :delete , class: "dropdown-item" %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>

