<div class="container">
  <h1>Vinyls</h1>

  <div
    id="map"
    style="width: 100%;
    height: 600px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>

  <% @vinyls.each do |vinyl| %>
  <div class="card-product">
    <img src="https://www.pngkey.com/png/full/16-166207_vector-record-yellow-vinyl-vector-transparent-download-lp.png" >
      <div class="card-info">
        <h5><%= link_to @vinyls.name, vinyl_path(vinyl) %></h5>
        <h6><%= @vinyls.user.name %></h6>
        <p><%= @vinyls.genre %> | <%= @vinyls.release_date %> | <%= @vinyls.address %></p>
        <br>
        <p> <%= @vinyls.price %> â‚¬</p>
        <% if policy(vinyl).edit? %>
          <%= link_to 'Edit', edit_vinyl_path(vinyl) %>
        <% end %>
        <% if policy(vinyl).destroy? %>
          <%= link_to 'Destroy', data: {confirm: "Are you sure?"}, vinyl_path(vinyl) method: :delete %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>


