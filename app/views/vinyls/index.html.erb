<div class="container">
  <h1>Vinyls</h1>
  <div class="content">
    <div class="cards">
      <div class="d-flex mb-5 justify-content-around">
        <% @vinyls.each do |vinyl| %>
          <%= render "shared/record_image", vinyl: vinyl %>
        <% end %>
      </div>
    </div>
  <div
    id="map"
    style="width: 100%;
    height: 600px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>
  </div>
</div>





