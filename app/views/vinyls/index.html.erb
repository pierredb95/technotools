<div class="container">
  <h1>Vinyls</h1>

  <div
    id="map"
    style="width: 100%;
    height: 600px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>

  <% @vinyls.each do |vinyl| %>
  <div class="card-product">
    <img src="https://www.pngkey.com/png/full/16-166207_vector-record-yellow-vinyl-vector-transparent-download-lp.png" >
      <div class="card-info">
        <h5><%= link_to vinyl.name, vinyl_path(vinyl) %></h5>
        <h6><%= vinyl.user.pseudo %></h6>
        <p><%= vinyl.genre.name %> | <%= vinyl.release_date %> | <%= vinyl.address %></p>
        <br>
        <p> <%= vinyl.price_per_day %> â‚¬</p>
        <% if policy(vinyl).edit? %>
          <%= link_to 'Edit', edit_vinyl_path(vinyl) %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>


