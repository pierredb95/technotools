<div class='container devise-form'>
  <h1>Add a new vinyl</h1>

  <%= simple_form_for @vinyl do |f| %>
    <%= f.input :name, label:'Album title', placeholder: 'The dark side of the moon' %>
    <%= f.input :artist %>
    <%= f.input :release_date, as: :date, html5: true %>
    <%= f.input :price_per_day, as: :integer, placeholder: 'â‚¬' %>
    <%= f.association :genre, placeholder: 'Rock' %>
    <%= f.input :address, placeholder: '119 rue Nationale, Lille, 59000, France' %>
    <%= f.input :photo, as: :file %>
    <!-- required: false  -->
    <%= f.submit class: "btn btn-primary" %>
  <% end %>
</div>
